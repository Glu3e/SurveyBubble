<% include ../partials/header.ejs %>

    
    <div class="container">
      <div class="row">
        <div id="main-div" class="col-md-offset-3 col-md-6">
          <h3>Survey Search Results </h3>          
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Submitted By</th>
              <th class="text-center">End Date</th>
              <th class="text-center"></th>
            </tr>
            
            <% for (let count = 0; count < msurveys.length; count++) { %>
                        
            <tr>
              <td class="text-center"><%= msurveys[count].surveyTitle %></td>
              <td class="text-center"><%= msurveys[count].submittedBy %></td>
              <td class="text-center"><%= msurveys[count].endDate %></td>
              <td class="text-center">
              <a href="/search/results/<%= msurveys[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Select</a>
              </td>
              
            </tr>
            <% } %>
          </table>

        </div>
      </div>
    </div>
    <br>
<div id="surveys">
     <% for (let outerCount = 0; outerCount < msurveys.length; outerCount++) { %>
            <h3><%= msurveys[outerCount].surveyTitle %></h3>
        
            <% for (let count = 0; count < 5; count++) { %>

             <fieldset style="margin-bottom: 25px; border-radius: 15px;">                
                <h4> Question <%= [count+1] %> </h4>
                  <label><%= msurveys[outerCount].question[count].questionTitle %></label><br/>
                  <input id="rdBtnA<%= [count] %>" name="Question<%= [outerCount] %>.<%= [count] %>" type="radio" value="A">
                  a) <%= msurveys[outerCount].question[count].optionA %> <br/>
                  <input id="rdBtnB<%= [count] %>" name="Question<%= [outerCount] %>.<%= [count] %>" type="radio" value="B">
                  b) <%= msurveys[outerCount].question[count].optionB %><br/>
                  <input id="rdBtnC<%= [count] %>" name="Question<%= [outerCount] %>.<%= [count] %>" type="radio" value="C">
                  c) <%= msurveys[outerCount].question[count].optionC %><br/>
                  <input id="rdBtnD<%= [count] %>" name="Question<%= [outerCount] %>.<%= [count] %>" type="radio" value="D">
                  d) <%= msurveys[outerCount].question[count].optionD %><br/>
              </fieldset>

             <% } %>
             <% } %>
</div>
   
    <my-app></my-app>

    
<% include ../partials/footer.ejs %>


