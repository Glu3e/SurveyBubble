<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>Survey creation Page </h3>
           <a href="/surveys/add" class="btn btn-primary"><i class="fa fa-plus"></i> Short Answer Template</a>
           <!-- add another link to add other template-->
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Survey's Online</th>
              <th class="text-center">Submitted By</th>
              <th class="text-center">End Date</th>
            </tr>
            <!-- Template Row -->
            
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td class="text-center"><%= surveys[count].surveyTitle %></td>
              <td class="text-center"><%= surveys[count].submittedBy %></td>
              <td class="text-center"><%= surveys[count].endDate %></td>
              <td class="text-center">
              <a href="/surveys/<%= surveys[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
               </td>
              <td class="text-center">
              <a href="/surveys/delete/<%= surveys[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>

          <% for (let outerCount = 0; outerCount < surveys.length; outerCount++) { %>
            <h3><%= surveys[outerCount].surveyTitle %></h3>
          
          <% for (let count = 0; count < 6; count++) { %>
             <fieldset style="margin-bottom: 25px; border-radius: 15px;">                
                <h4> Question <%= [count] %> </h4>
                  <label><%= surveys[outerCount].questionTitle %></label><br/>
                  <input <%= [count] %>" name="question<%= [outerCount] %>.<%= [count] %>" type="text" value="Answer">
                  <%= surveys[outerCount].optionA %><br/>
              </fieldset>

             <% } %>
             <% } %>

        </div>
      </div>
    </div>
   

    <my-app></my-app>

<% include ../partials/footer.ejs %>


