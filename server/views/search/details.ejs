<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->

    <div class="container">
      <div class="row">
        <div id="main-div" class="col-md-offset-3 col-md-6">        

            <h3><%= msurveys.surveyTitle %></h3>
        
            <% for (let count = 0; count < 5; count++) { %>

             <fieldset style="margin-bottom: 25px; border-radius: 15px;">                
                <!--h4> Question <%= [count+1] %> </h4-->
                  <label><%= msurveys.question[count].questionTitle %></label><br/>
                  <input id="rdBtnA<%= [count] %>" name="Question<%= [count] %>" type="radio" value="A">
                  a) <%= msurveys.question[count].optionA %> <br/>
                  <input id="rdBtnB<%= [count] %>" name="Question<%= [count] %>" type="radio" value="B">
                  b) <%= msurveys.question[count].optionB %><br/>
                  <input id="rdBtnC<%= [count] %>" name="Question<%= [count] %>" type="radio" value="C">
                  c) <%= msurveys.question[count].optionC %><br/>
                  <input id="rdBtnD<%= [count] %>" name="Question<%= [count] %>" type="radio" value="D">
                  d) <%= msurveys.question[count].optionD %><br/>
                  
              </fieldset>
            

             <% } %>
               <button type="submit" onclick="thankYou()">>Submit</button>
            

        </div>
      </div>
    </div>
<script>
function thankYou() {
    alert("Thank you for taking the survey!");
}
</script>


